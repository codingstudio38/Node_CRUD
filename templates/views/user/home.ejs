<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('user_css') %>
        <title>Node Js || Home User</title>
</head>

<body>
    <%- include('user_navbar', {active: "user_home" , user:userdata, login:loggedin }) %>
        <div class="container">
            <section class="vh-100" style="margin-top: 20px;">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Photo</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% users.forEach(function(user){ %>
                            <tr>
                                <th scope="row">1</th>
                                <td>
                                    <%- user.name %>
                                </td>
                                <td>
                                    <%- user.email %>
                                </td>
                                <td>
                                    <%- user.phone %>
                                </td>
                                <td>
                                    <img src="http://localhost:5000/users/<%- user.photo %>"
                                        style="width: 50px; height: 50px;" alt="">
                                </td>
                                <td>
                                    <a href="/user/edit?id=<%- user._id %>" class="btn btn-warning btn-sm"><i
                                            class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a href="/user/delete?id=<%- user._id %>" class="btn btn-danger btn-sm"><i
                                            class="fa fa-trash" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>

            </section>
        </div>
        <%- include('user_footer') %>




</body>

</html>